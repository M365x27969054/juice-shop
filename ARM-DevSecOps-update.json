{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",

  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "acrName": {
      "type": "string",
      "defaultValue": "[format('acrdevsecops{0}', resourceGroup().tags.LabInstance)]"
    },
    "keyvaultName": {
      "type": "string",
      "defaultValue": "[format('kvdevsecops{0}', resourceGroup().tags.LabInstance)]"
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]"
    }
  },

  "variables": {
    "juiceShopContainerGroup": "[format('juiceshop-aci-{0}', resourceGroup().tags.LabInstance)]",
    "sonarqubeContainerGroup": "[format('sonarqube-aci-{0}', resourceGroup().tags.LabInstance)]",
    "depTrackContainerGroup": "[format('dependency-track-aci-{0}', resourceGroup().tags.LabInstance)]",
    "sqlServerName": "[format('sql-devsecops-{0}', resourceGroup().tags.LabInstance)]"
  },

  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2021-12-01-preview",
      "name": "[parameters('acrName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard" },
      "properties": { "adminUserEnabled": true }
    },

    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2021-11-01-preview",
      "name": "[parameters('keyvaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[parameters('tenantId')]",
        "sku": { "name": "standard", "family": "A" },
        "accessPolicies": []
      }
    },

    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-10-01",
      "name": "[variables('juiceShopContainerGroup')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": "Standard",
        "osType": "Linux",
        "restartPolicy": "Always",
        "containers": [
          {
            "name": "juiceshop",
            "properties": {
              "image": "[concat(parameters('acrName'), '.azurecr.io/juiceshopgit:1')]",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 3000
                }
              ],
              "environmentVariables": [],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 2
                }
              }
            }
          }
        ],
        "imageRegistryCredentials": [
          {
            "server": "[concat(parameters('acrName'), '.azurecr.io')]",
            "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2021-12-01-preview').username]",
            "password": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName')), '2021-12-01-preview').passwords[0].value]"
          }
        ],
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('juiceShopContainerGroup')]",
          "ports": [
            {
              "protocol": "TCP",
              "port": 3000
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]"
      ]
    },

    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-10-01",
      "name": "[variables('sonarqubeContainerGroup')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": "Standard",
        "osType": "Linux",
        "restartPolicy": "Always",
        "containers": [
          {
            "name": "sonarqube",
            "properties": {
              "image": "sonarqube:latest",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 9000
                }
              ],
              "environmentVariables": [],
              "resources": {
                "requests": {
                  "cpu": 2,
                  "memoryInGB": 4
                }
              }
            }
          }
        ],
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('sonarqubeContainerGroup')]",
          "ports": [
            {
              "protocol": "TCP",
              "port": 9000
            }
          ]
        }
      }
    },

    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-10-01",
      "name": "[variables('depTrackContainerGroup')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": "Standard",
        "osType": "Linux",
        "restartPolicy": "Always",
        "containers": [
          {
            "name": "dtrack-frontend",
            "properties": {
              "image": "dependencytrack/frontend:latest",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 8080
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 2
                }
              }
            }
          },
          {
            "name": "dtrack-backend",
            "properties": {
              "image": "dependencytrack/apiserver:latest",
              "ports": [],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 2
                }
              }
            }
          }
        ],
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('depTrackContainerGroup')]",
          "ports": [
            {
              "protocol": "TCP",
              "port": 8080
            }
          ]
        }
      }
    },

    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-11-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "secops",
        "administratorLoginPassword": "P@$$w0rd123",
        "version": "12.0",
        "publicNetworkAccess": "Enabled"
      }
    },

    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-11-01-preview",
      "name": "[concat(variables('sqlServerName'), '/dtrack')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "GP_S_Gen5",
        "tier": "GeneralPurpose",
        "capacity": 1
      },
      "properties": {
        "autoPauseDelay": 60,
        "minCapacity": 0.5
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    }
  ]
}
