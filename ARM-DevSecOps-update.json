{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "acrName": {
      "type": "string",
      "defaultValue": "[format('acrdevsecops{0}', resourceGroup().tags.LabInstance)]"
    },
    "keyvaultName": {
      "type": "string",
      "defaultValue": "[format('kvdevsecops{0}', resourceGroup().tags.LabInstance)]"
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "[subscription().tenantId]"
    }
  },
  "variables": {
    "acaEnvName": "[format('aca-env-{0}', resourceGroup().tags.LabInstance)]",
    "juiceShopName": "[format('juiceshop-aca-{0}', resourceGroup().tags.LabInstance)]",
    "sonarqubeName": "[format('sonarqube-aca-{0}', resourceGroup().tags.LabInstance)]",
    "depTrackName": "[format('dependency-track-aca-{0}', resourceGroup().tags.LabInstance)]",
    "sqlServerName": "[format('sql-devsecops-{0}', resourceGroup().tags.LabInstance)]"
  },

  "resources": [
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2021-12-01-preview",
      "name": "[parameters('acrName')]",
      "location": "[parameters('location')]",
      "sku": { "name": "Standard" },
      "properties": { "adminUserEnabled": true }
    },

    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2021-11-01-preview",
      "name": "[parameters('keyvaultName')]",
      "location": "[parameters('location')]",
      "properties": {
        "tenantId": "[parameters('tenantId')]",
        "sku": { "name": "standard", "family": "A" },
        "accessPolicies": []
      }
    },

    {
      "type": "Microsoft.Web/kubeEnvironments",
      "apiVersion": "2023-05-01",
      "name": "[variables('acaEnvName')]",
      "location": "[parameters('location')]",
      "properties": { "type": "Managed" }
    },

    {
      "type": "Microsoft.Web/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('juiceShopName')]",
      "location": "[parameters('location')]",
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "environmentId": "[resourceId('Microsoft.Web/kubeEnvironments', variables('acaEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 3000
          },
          "registries": [
            {
              "server": "[concat(parameters('acrName'), '.azurecr.io')]",
              "identity": "system"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "juiceshop",
              "image": "[concat(parameters('acrName'), '.azurecr.io/juiceshopgit:1')]",
              "resources": {
                "cpu": 1,
                "memory": "2Gi"
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]",
        "[resourceId('Microsoft.Web/kubeEnvironments', variables('acaEnvName'))]"
      ]
    },

    {
      "type": "Microsoft.Web/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('sonarqubeName')]",
      "location": "[parameters('location')]",
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "environmentId": "[resourceId('Microsoft.Web/kubeEnvironments', variables('acaEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 9000
          }
        },
        "template": {
          "containers": [
            {
              "name": "sonarqube",
              "image": "sonarqube:latest",
              "resources": {
                "cpu": 2,
                "memory": "4Gi"
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/kubeEnvironments', variables('acaEnvName'))]"
      ]
    },

    {
      "type": "Microsoft.Web/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[variables('depTrackName')]",
      "location": "[parameters('location')]",
      "identity": { "type": "SystemAssigned" },
      "properties": {
        "environmentId": "[resourceId('Microsoft.Web/kubeEnvironments', variables('acaEnvName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8080
          }
        },
        "template": {
          "containers": [
            {
              "name": "dtrack-frontend",
              "image": "dependencytrack/frontend:latest",
              "resources": {
                "cpu": 1,
                "memory": "2Gi"
              }
            },
            {
              "name": "dtrack-backend",
              "image": "dependencytrack/apiserver:latest",
              "resources": {
                "cpu": 1,
                "memory": "2Gi"
              }
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/kubeEnvironments', variables('acaEnvName'))]"
      ]
    },

    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2021-11-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "administratorLogin": "secops",
        "administratorLoginPassword": "P@$$w0rd123",
        "version": "12.0",
        "publicNetworkAccess": "Enabled"
      }
    },

    {
      "type": "Microsoft.Sql/servers/databases",
      "apiVersion": "2021-11-01-preview",
      "name": "[concat(variables('sqlServerName'), '/dtrack')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "GP_S_Gen5",
        "tier": "GeneralPurpose",
        "capacity": 1
      },
      "properties": {
        "autoPauseDelay": 60,
        "minCapacity": 0.5
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
      ]
    }
  ]
}
